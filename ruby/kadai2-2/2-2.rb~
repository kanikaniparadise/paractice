#!/usr/bin/ruby
# coding: utf-8
each_month=[[],[],[],[],[],[],[],[],[],[],[],[]]
want = 2
n=Array.new(12,0)
require "fileutils"
Dir.foreach("./"){|folder|
  if(!(folder.include?(".")))
    Dir.glob("./"+folder+"/*.csv"){|file|
      month = File.basename(file)[0,2]
      puts file
      File.open(file){|f|
        f.each_line{|line|
          each_month[(month.to_i)-1].push(line.split(",")[want].to_i)
          n[month.to_i-1]+=line.split(",")[want].to_i
        }
      }
    }
    0.step(11,1){|i|
      puts((i+1).to_s+"æœˆ")
      m_length=each_month[i].length
      each_month[i]=each_month[i].sort
      printf("ave = ")
      puts(each_month[i].sum/m_length)
      printf("max = ")
      puts(each_month[i][m_length-1])
      printf("min = ")
      puts(each_month[i][0])
      printf("med = ")
      puts 2
      puts(n[i])
    }
  end
}

